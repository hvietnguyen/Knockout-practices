<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .modal-dialog{
            margin-top:10%;
        }
    </style>
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Keys Onboarding", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Stores", "Index", "Stores")</li>
                    <li>@Html.ActionLink("Products", "Index", "Products")</li>
                    <li>@Html.ActionLink("Customers", "Index", "Customers")</li>
                    <li>@Html.ActionLink("Sales", "Index", "ProductSolds")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript">
    $(document).ready(function () {
        $.ajaxSetup({ cache: false });
    });

    function create(url) {
        debugger;
        console.log(url);
        $('#myModal').load(url);
        $('#myModal').modal('show');
        return false;
    }

    function edit(url) {
        debugger;
        console.log(url);
        $('#myModal').load(url);
        $('#myModal').modal('show');
        return false;
    }

    function deleteItem(url) {
        debugger;
        console.log(url);
        $('#myModal').load(url);
        $('#myModal').modal('show');
        return false;
    }
    </script>
     
    @RenderSection("scripts", required: false)

</body>
</html>
