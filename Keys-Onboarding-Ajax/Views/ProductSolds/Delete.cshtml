@model Keys_Onboarding_Ajax.Models.ProductSold

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Delete</h4>
        </div>
        <div class="modal-body">
            @*<p>Some text in the modal.</p>*@
            <h3>Are you sure you want to delete this?</h3>
            <div>
                <h5>Product Sold</h5>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Customer@*@Html.DisplayNameFor(model => model.Customer.Name)*@
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Customer.Name)
                    </dd>

                    <dt>
                        Product@*@Html.DisplayNameFor(model => model.Product.Name)*@
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Product.Name)
                    </dd>

                    <dt>
                        Store@*@Html.DisplayNameFor(model => model.Store.Name)*@
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Store.Name)
                    </dd>

                    <dt>
                        Date@*@Html.DisplayNameFor(model => model.DateSold)*@
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DateSold)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-actions no-color">
                        <input id="delete" type="button" value="Delete" class="btn btn-sm btn-danger" />
                    </div>
                }
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-sm btn-warning" data-dismiss="modal">Close</button>
        </div>
    </div>

</div>

