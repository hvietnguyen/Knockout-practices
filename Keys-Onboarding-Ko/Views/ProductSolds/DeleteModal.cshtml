
<div id="deleteModal" class="modal fade" data-backdrop="static" data-keyboard="false" data-bind="with: currentProductSold">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content backgroundImage">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete</h4>
            </div>
            <div class="modal-body">
                <h3>Are you sure you want to delete this?</h3>
                <div>
                    <h5>Product</h5>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            Product
                        </dt>

                        <dd data-bind="text:Product().Name">
                        </dd>

                        <dt>
                            Customer
                        </dt>

                        <dd data-bind="text:Customer().Name">

                        </dd>

                        <dt>
                            Store
                        </dt>

                        <dd data-bind="text:Store().Name">

                        </dd>

                        <dt>
                            Date
                        </dt>

                        <dd data-bind="text:FormattedDate">

                        </dd>

                    </dl>

                    <div class="form-actions no-color">
                        <input type="button" value="Delete" class="btn btn-sm btn-danger" data-bind="click: $root.deleteConfirm" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-warning" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>





