
<div id="editModal" class="modal fade" data-backdrop="static" data-keyboard="false" data-bind="with: currentProductSold">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content backgroundImage">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Create New</h4>
            </div>
            <div class="modal-body">
                @*<p>Some text in the modal.</p>*@
                <div class="form-horizontal">
                    <h5>Product</h5>
                    <hr />
                    <div class="form-group">
                        <label class="control-lable col-md-2">Product</label>
                        <div class="col-md-10">
                            <select class="form-control" data-bind="options: $root.products,
                                                                    value: $root.selectedProduct,
                                                                    optionsValue: 'Id',
                                                                    optionsText:'Name',
                                                                    valueUpdate:'afterkeydown'">
                            </select>
                            <span class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-lable col-md-2">Customer</label>
                        <div class="col-md-10">
                            <select class="form-control" data-bind="options: $root.customers,
                                                                    value: $root.selectedCustomer,
                                                                    optionsValue: 'Id',
                                                                    optionsText:'Name',
                                                                    valueUpdate:'afterkeydown'">

                            </select>
                            <span class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-lable col-md-2">Store</label>
                        <div class="col-md-10">
                            <select class="form-control" data-bind="options: $root.stores,
                                                                    value: $root.selectedStore,
                                                                    optionsValue: 'Id',
                                                                    optionsText:'Name',
                                                                    valueUpdate:'afterkeydown'">

                            </select>
                            <span class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-lable col-md-2">Date</label>
                        <div class="col-md-10">
                            <input type='date' class="form-control" data-bind="date:Date, format:'YYYY-MM-DD', valueUpdate:'afterkeydown'" />
                            <span class="errorStyle" data-bind="visible: Date.hasError, text: Date.validationMessage"></span>
                        </div>

                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <a href="#" class="btn btn-sm btn-success" data-bind="click: $root.save">Save</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-warning" data-bind="click:$root.cancel">Close</button>
            </div>
        </div>

    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}






