
<div id="editModal" class="modal fade" data-backdrop="static" data-keyboard="false" data-bind="with: currentStore()">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content backgroundImage">
            <div class="modal-header">
                <button type="button" class="close" data-bind="click: $root.cancel">&times;</button>
                <h4 class="modal-title">Edit</h4>
            </div>
            <div class="modal-body">
                @*<p>Some text in the modal.</p>*@

                <div class="form-horizontal">
                    <h5>Customer</h5>
                    <div>
                        <span class="text-danger glyphicon glyphicon-warning-sign" data-bind="visible: !$root.isValidated()"></span> <span class="errorMessage text-danger"></span>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label class="control-lable col-md-2" for="Name">Name</label>
                        <div class="col-md-10">
                            <input class="form-control" data-bind="value: Name, valueUpdate:'afterkeydown'" />
                            <span class="errorStyle" data-bind="visible: Name.hasError, text: Name.validationMessage"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-lable col-md-2" for="Address">Address</label>
                        <div class="col-md-10">
                            <input class="form-control" data-bind="value: Address, valueUpdate:'afterkeydown'" />
                            <span class="errorStyle" data-bind="visible: Address.hasError, text: Address.validationMessage"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <a href="#" class="btn btn-sm btn-success" data-bind="click: $root.save">Save</a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-warning" data-bind="click: $root.cancel">Close</button>
            </div>
        </div>

    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




